<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".libertadFragment"
    android:background="@color/FondoLibertad">


    <TextView
        android:id="@+id/tituloLibertad"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a La Estatua de la Libertad!"
        android:textStyle="bold"
        android:background="@color/botonFondoLibertad"
        android:textColor="@color/letrasLibertad"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ReseñaLibertad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="La Estatua de la Libertad, fue un regalo del pueblo francés a Estados Unidos, diseñado por Auguste Bartholdi, para conmemorar la alianza entre ambos países durante la Revolución Estadounidense. Inaugurada en 1886, la estatua simboliza la libertad, la justicia y la democracia, y su nombre oficial es La Libertad Iluminando el Mundo. Mide 93 metros de altura, está hecha de cobre, y su pedestal fue financiado por Estados Unidos, mientras que el pueblo francés recaudó fondos para su construcción."
        app:layout_constraintTop_toBottomOf="@id/tituloLibertad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <WebView
        android:id="@+id/videoLibertad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ReseñaLibertad"
        android:layout_width="300dp"
        android:layout_height="300dp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="140dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLibertad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Regresar al mapa de EUA"
        android:backgroundTint="@color/botonFondoLibertad"
        android:textColor="@color/letrasLibertad"
        app:cornerRadius="12dp"
        android:elevation="8dp"
        app:rippleColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/videoLibertad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
