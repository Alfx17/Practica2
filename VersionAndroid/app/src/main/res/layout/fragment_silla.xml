<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondoSilla"
    tools:context=".sillaFragment">

    <TextView
        android:id="@+id/tituloSilla"
        android:layout_width="0dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a El Cerro de la Silla!"
        android:textStyle="bold"
        android:background="@color/botonFondoSilla"
        android:textColor="@color/letrasSilla"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ReseñaSilla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="El Cerro de la Silla es el ícono natural y cultural de Monterrey, Nuevo León, y un emblema de este estado mexicano. Se trata de un Monumento Natural protegido que representa no solo un referente de belleza y biodiversidad, sino también un símbolo de esfuerzo y orgullo para los regiomontanos. Es un punto importante para el senderismo y el ecoturismo, con senderos que ofrecen vistas espectaculares de la ciudad."
        app:layout_constraintTop_toBottomOf="@id/tituloSilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <WebView
        android:id="@+id/videoSilla"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/ReseñaSilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Regresar al mapa de México"
        android:backgroundTint="@color/botonFondoSilla"
        android:textColor="@color/letrasSilla"
        app:cornerRadius="12dp"
        android:elevation="8dp"
        app:rippleColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/videoSilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>