<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tituloTarea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¡Selecciona el país de tu interés y conócelo!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/mainTitulo"
        android:textColor="@color/mainTituloLetras"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Contenedor de imágen y botones -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tituloTarea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imágen del mapa -->

        <!-- Botón sobre México -->

        <ImageView
            android:id="@+id/America"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:src="@mipmap/america"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Mexico"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="300dp"
            android:backgroundTint="@android:color/transparent"
            android:padding="0dp"
            android:gravity="center"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:text=". "
            android:textSize="0dp"
            android:translationZ="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Alaska"
            android:layout_width="50dp"
            android:layout_height="55dp"
