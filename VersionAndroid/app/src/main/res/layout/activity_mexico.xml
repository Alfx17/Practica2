<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006341"
    tools:context=".MexicoActivity">

    <TextView
        android:id="@+id/tituloMexico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a México!"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:textColor="#C8102E"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mapaMexico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tituloMexico"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imágen del mapa -->

        <ImageView
            android:id="@+id/Mexico"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:scaleType="fitXY"
            android:src="@mipmap/mexico"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/vallartaB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/vallarta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginStart="123dp"
            android:layout_marginTop="264dp"
            android:outlineProvider="none"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:id="@+id/tenochtitlanB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/tenochtitlan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginStart="190dp"
            android:layout_marginTop="280dp"
            android:outlineProvider="none"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:id="@+id/sillaB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/silla"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:layout_marginStart="170dp"
            android:layout_marginTop="150dp"
            android:outlineProvider="none"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Regresar al mapa principal"
        android:backgroundTint="#FFFFFF"
        android:textColor="#C8102E"
        app:cornerRadius="12dp"
        android:elevation="8dp"
        app:rippleColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="620dp" />

</androidx.constraintlayout.widget.ConstraintLayout>